{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "shippy",
  "main": "./dist/index.js",
  "compatibility_date": "2026-01-30",
  "compatibility_flags": [
    "nodejs_compat"
  ],
  "assets": {
    "directory": "./dist"
  },

  // D1 Database
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "vibeship-db",
      "database_id": "LOCAL_DB_ID",
      "migrations_dir": "drizzle"
    }
  ]
}
